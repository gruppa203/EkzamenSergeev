<Window x:Class="EkzamenSergeev1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:EkzamenSergeev1"
        mc:Ignorable="d"
        Title="MainWindow" MinHeight="200" MinWidth="200" Height="450" Width="800">
    <Grid Initialized="Grid_Initialized">
        <Grid.RowDefinitions>
            <RowDefinition Height="139*"/>
            <RowDefinition Height="280*"/>
        </Grid.RowDefinitions>
        <StackPanel HorizontalAlignment="Left" VerticalAlignment="Top" Orientation="Horizontal" Grid.Row="0"  Grid.RowSpan="2">
            <Image HorizontalAlignment="Left" Height="140" VerticalAlignment="Top" Width="160" Source="Resources/picture.png"/>

            <Label  x:Name="ZagolovokLabel" Content="Продажа Канцелярии" HorizontalAlignment="Left" VerticalAlignment="Center" />
        </StackPanel>
        <Frame x:Name="GlavniFrame"  HorizontalAlignment="Center"  VerticalAlignment="Center" Grid.Row="1" Initialized="MainFrame_Initialized"/>

    </Grid>
</Window>
