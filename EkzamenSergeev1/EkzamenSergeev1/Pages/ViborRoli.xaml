<Page x:Class="EkzamenSergeev1.Pages.ViborRoli"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:EkzamenSergeev1.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ViborRoli">

    <Grid Background="White">
        <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Vertical">
            <Label x:Name="LabelRol" Content="Выберите роль" HorizontalAlignment="Center" VerticalAlignment="Top"/>
            <Button x:Name="KlientButton" Content="Клиент" HorizontalAlignment="Stretch"  Margin="10" VerticalAlignment="Top"/>
            <Button x:Name="MenegerButton" Content="Менеджер" HorizontalAlignment="Stretch"  Margin="10" VerticalAlignment="Top" />
            <Button x:Name="AdminButton"  HorizontalAlignment="Stretch" Content="Администратор"  Margin="10" VerticalAlignment="Top" Click="AdminButton_Click" />

        </StackPanel>

    </Grid>
</Page>
